@page "/Cuenta/ResetearContraseña"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Globalization
@using TodoSeUsa.Application.Security
@using TodoSeUsa.BlazorServer.Features.Account.Shared
@using TodoSeUsa.Infrastructure.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities

@inject IdentityRedirectManager RedirectManager
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject IRecoveryCodeHasher RecoveryCodeHasher

<style>
    .btn {
        width: 100%;
        padding: 0.6rem;
    }
    .form-label
    {
        margin-bottom: 2px !important;
    }
</style>

<PageTitle>Resetear contraseña</PageTitle>

<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">

    <h1>Resetear contraseña</h1>

    <RadzenCard Style="width: 480px">

        <h2>Resetea tu contraseña.</h2>
        <hr />

        <RadzenStack Style="width: 100%;">
            <StatusMessage Message="@Message" />

            <EditForm Model="this" OnValidSubmit="OnValidSubmitAsync" >

                <DataAnnotationsValidator />

                <RadzenStack Orientation="Orientation.Vertical" Gap="1rem">

                    <RadzenStack Orientation="Orientation.Vertical" Gap="0px">

                        <label for="Input.Password" class="form-label">Contraseña</label>
                        <InputText @bind-Value="Input.Password" type="password" id="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Porfavor ingrese su contraseña." style="width: 100%" />
                        <ValidationMessage For="() => Input.Password" class="text-danger" />
                    </RadzenStack>

                    <RadzenStack Orientation="Orientation.Vertical" Gap="0px">

                        <label for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <InputText @bind-Value="Input.ConfirmPassword" type="password" id="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Porfavor confirme su contraseña." style="width: 100%" />
                        <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger" />
                    </RadzenStack>

                    <RadzenButton Style="margin-top: 1rem;" ButtonType="ButtonType.Submit">Resetear contraseña</RadzenButton>

                </RadzenStack>
            </EditForm>
        </RadzenStack>

    </RadzenCard>
</RadzenStack>

@code {

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private IEnumerable<IdentityError>? identityErrors;

    private string? Message => identityErrors is null ? null : $"Error: {string.Join(", ", identityErrors.Select(error => error.Description))}";

    protected override void OnInitialized()
    {

        var verified = HttpContext.Session.GetString("PasswordRecoveryVerified");
        var userId = HttpContext.Session.GetString("PasswordRecoveryUserId");
        var expiresRaw = HttpContext.Session.GetString("PasswordRecoveryExpiresUtc");

        if (string.IsNullOrEmpty(verified) || string.IsNullOrEmpty(userId) || string.IsNullOrEmpty(expiresRaw))
        {
            NavigationManager.NavigateTo("/error", true);
            return;
        }
    }

    private async Task OnValidSubmitAsync()
    {
        var verified = HttpContext.Session.GetString("PasswordRecoveryVerified");
        var userId = HttpContext.Session.GetString("PasswordRecoveryUserId");
        var expiresRaw = HttpContext.Session.GetString("PasswordRecoveryExpiresUtc");

        HttpContext.Session.Remove("PasswordRecoveryVerified");
        HttpContext.Session.Remove("PasswordRecoveryUserId");
        HttpContext.Session.Remove("PasswordRecoveryExpiresUtc");

        if (verified != "true" || string.IsNullOrEmpty(userId) || string.IsNullOrEmpty(expiresRaw))
        {

            NavigationManager.NavigateTo("/error", true);
            return;
        }

        var nowUtc = DateTime.UtcNow;

        var parsed = DateTime.TryParseExact(expiresRaw, "O", CultureInfo.InvariantCulture, DateTimeStyles.RoundtripKind, out var expiresUtc);

        var isExpired = !parsed || nowUtc > expiresUtc;

        if (isExpired || verified != "true" || string.IsNullOrEmpty(userId))
        {
            NavigationManager.NavigateTo("/error", true);
            return;
        }

        var user = await UserManager.FindByIdAsync(userId);

        if (user is null)
        {
            NavigationManager.NavigateTo("/Cuenta/ContraseñaOlvidada");
            return;
        }

        var token = await UserManager.GeneratePasswordResetTokenAsync(user);

        var result = await UserManager.ResetPasswordAsync(user, token, Input.Password);

        if (!result.Succeeded)
        {
            identityErrors = result.Errors;
            NavigationManager.NavigateTo("/error");
            return;
        }

        var newPlainRecoveryCode = RecoveryCodeGenerator.Generate();
        user.RecoveryCodeHash = RecoveryCodeHasher.Hash(newPlainRecoveryCode);

        await UserManager.UpdateAsync(user);

        HttpContext.Session.SetString("RecoveryCode", newPlainRecoveryCode);

        RedirectManager.RedirectTo("Cuenta/Registrado");
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "La contraseña es requerida.")]
        [StringLength(100, ErrorMessage = "La {0} debe ser al menos {2} y máximo {1} carácteres de largo.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        [Display(Name = "Password")]
        public string Password { get; set; } = "";

        [DataType(DataType.Password)]
        [Display(Name = "Confirmar contraseña")]
        [Compare("Password", ErrorMessage = "La contraseña y la confirmación de contraseña son distintas.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
